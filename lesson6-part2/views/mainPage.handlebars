<h1 style="text-align: center; margin-top:2em" name="questionData">
    {{questionData}}
</h1>



<div class="row" style="margin-top: 1em; position: relative">
    <div class="col">
        <form action="/yes" method="POST">
            <textarea style="visibility: hidden;" name="id">{{id}}</textarea>
            <a href="/yes/{{id}}"> <button style="position: absolute; margin: 0; left:50%"
                    class="btn btn-secondary">YES</button>
            </a>
        </form>

    </div>
    <div class="col">
        <form action="/no" method="POST">
            <textarea style="visibility: hidden;" name="id">{{id}}</textarea>
            <button style="position:absolute; margin:0; right:50%" type="submit" class="btn btn-warning">NO</button>
        </form>
    </div>
</div>